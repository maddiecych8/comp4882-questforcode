<body class="game-bg">


<div style="padding: 20px">
  <div class="row no-gutters ">
    <div class="col first-Element">
      <div class="over-top"><%= image_tag "climber_left.png", height: 100 %> </div>
       <%# <div class="over-node1"><%= node.node1 %> 
       <%# <div class="over-node2"><%= node.node2 %> 
       <%# <div class="over-node3"><%= node.node3 %> 
      <div class="under"><%= image_tag "game_tree1.png", height: 550 %></div>
    </div>
    
    

    <div class="col second-Element slideInRight">
      <div class="float-container" style="padding: 10px" >
        <div class="row-center float-child" style="display: inline-block ">
            <div>
                <button id="help" class="btn btn-success btn-lg">Hint</button>
                    <script>
                    function hint() {
                    alert('Look for apples');
                    }
                    document.getElementById("help").addEventListener("click", hint);
                    </script>
            </div>
        </div>
        <div class="float-child" style="display: inline-block">
            <%= link_to 'Exit', start_path, class: "btn btn-success btn-lg" %>
        </div>
      </div>
      <div >
            <%= image_tag "new_playtest_algo3.png", height: 300 %>
      </div>
      <div class="card border-dark mb-3" style="max-width: 29.5rem;">
        <div class="card-header">Console Output</div>
        <div class="table-wrap">
            <p class="card-text"></p>
      </div>
      <div class="input-group mb-3" style="padding: 20px">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">Enter Console Output</span>
        </div>
        <input type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
      </div>
    </div>
    <div style="padding: 10px" >
        <%= link_to 'Next', challenge_level2_path(node), class: "btn btn-success btn-lg" %>
    </div>
  </div>
</div>




<body class="game-bg">


<div style="padding: 20px">
  <div class="row no-gutters justify-content-md-center">
    <div class="col">
      <div class="over16 fourteenth-move" id="fall"><%= image_tag "climber_right.png", height: 100 %> </div>
      <div class="under"><%= image_tag "game_tree10.png", height: 550 %></div>
    </div>
    <div class="col-md-auto" align="center">
      <h3>Select Button to Move</h3>
      <div class="btn-group-vertical">
        <%= link_to 'check if there is an apple', endpage_path, class: "btn btn-success btn-lg" %>
      </div>
      <h3 style="padding: 10px">Return Apple</h3>
      <div class="btn-group" role="group">
        <button id="error" type="button" class="btn btn-success btn-lg">1</button>
          <script>
              function redirect() {
                document.getElementById("fall").className = "fall16"
                setTimeout(() => alert("Oops, wrong move! Already returned apple."),1000);
                setTimeout(() => window.location.href = 'http://localhost:3000/easy_levels/1', 1100);
              }
              document.getElementById("error").addEventListener("click", redirect);
          </script>
        <button id="error2" type="button" class="btn btn-success btn-lg">2</button>
          <script>
              function redirect() {
                document.getElementById("fall").className = "fall16"
                setTimeout(() => alert("Oops, wrong move! Already returned apple."),1000);
                setTimeout(() => window.location.href = 'http://localhost:3000/easy_levels/1', 1100);
              }
              document.getElementById("error2").addEventListener("click", redirect);
          </script>
        <button id="error3" type="button" class="btn btn-success btn-lg">3</button>
          <script>
              function redirect() {
                document.getElementById("fall").className = "fall16"
                setTimeout(() => alert("Oops, wrong move! Already returned apple."),1000);
                setTimeout(() => window.location.href = 'http://localhost:3000/easy_levels/1', 1100);
              }
              document.getElementById("error3").addEventListener("click", redirect);
          </script>
      </div>
      <div class="row-center">
      <div style="padding: 100px">
      <button id="help" class="btn btn-success btn-lg">Hint</button>
        <script>
        function hint() {
        alert('Any more apples in this subtree?');
        }
        document.getElementById("help").addEventListener("click", hint);
        </script>
    </div>
    </div>
    </div>
    <div class="col ">
      <div style="padding: 10px" align="right">
            <%= link_to 'Exit', start_path, class: "btn btn-success btn-lg" %>
      </div>
      <div >
            <%= image_tag "new_playtest_algo3.png", height: 300 %>
      </div>
      <div class="card border-dark mb-3" style="max-width: 29.5rem;">
        <div class="card-header">Console Output</div>
        <div class="table-wrap">
            <p class="card-body">check if there is an apple<br>
            climb branch to the left of 1<br>
            check if there is an apple<br>
            climb branch to the left of 2<br>
            check if there is an apple<br>
            2<br>
            climb branch to the right of 2<br>
            check if there is an apple<br>
            1<br>
            climb branch to the right of 1<br>
            check if there is an apple<br>
            climb branch to the left of 3<br>
            check if there is an apple<br>
            3<br>
            climb branch to the right of 3</p>
      </div>
    </div>
  </div>
</div>
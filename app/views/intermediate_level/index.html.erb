<body class="game-bg">


<div style="padding: 20px">
  <div class="row no-gutters justify-content-md-center">
    <div class="col first-Element">
      <div class="over"><%= image_tag "climber_left.png", height: 100 %> </div>
      <div class="under"><%= image_tag "Intermediate_tree.png",width: 500, height: 510 %></div>
    </div>
    <div class="col-md-auto third-Element slideInDown" align="center">
     <h4>Traversing Through Binary Tree</h4>
      <div class="btn-group-vertical">
     </div>
      <h5 style="padding: 10px">Enter your code to make the boy traverse the tree!</h5>
       <div class="btn-group" role="group">
        <div class="row-center">
         <div style="padding: 100px">
          <button id="help">Hint</button>
        <script>
      function hint() {
     alert('check if there is a branch to climb');
     }
      document.getElementById("help").addEventListener("click", hint);
      </script>
     </div>
    </div>
   </div>
  </div>

    <div class="col second-Element slideInRight">
      <div style="padding: 10px" align="right">
            <%= link_to 'Exit', start_path, class: "btn btn-success btn-lg" %>
      </div>
      <div >
            <%= image_tag "new_playtest_algo2.png", height: 300 %>
      </div>
      <div class="card border-dark mb-3" style="max-width: 28.5rem;">
        <div class="card-header">Console Output</div>
        <div class="card-body text-dark">
            <p class="card-text">.....</p>
      </div>
      <div class="input-group mb-3" style="padding: 20px">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">Enter Console Output</span>
        </div>
        <input type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
      </div>
    </div>
  </div>
</div>


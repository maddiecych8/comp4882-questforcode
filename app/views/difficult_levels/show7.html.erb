<body class="game-bg">


<div style="padding: 20px">
  <div class="row no-gutters ">
    <div class="col ">
      <div class="over second-move102"><%= image_tag "climber_left.png", height: 100 %> </div>
      <div class="under"><%= image_tag "Difficult6.png", height: 550 %></div>
    </div>
    
    
    <div class="col ">
      <div class="float-container" style="padding: 10px" >
        <div class="row-center float-child" style="display: inline-block ">
            <div>
                <button id="help" class="btn btn-success btn-lg">Hint</button>
                    <script>
                    function hint() {
                    alert('Move left to right');
                    }
                    document.getElementById("help").addEventListener("click", hint);
                    </script>
            </div>
        </div>
        <div class="float-child" style="display: inline-block">
            <%= link_to 'Exit', start_path, class: "btn btn-success btn-lg" %>
        </div>
      </div>
      <div >
            <%= image_tag "new_playtest_algo3.png", height: 300 %>
      </div>
      <div class="card border-dark mb-3" style="max-width: 29.5rem;">
        <div class="card-header">Console Output</div>
        <div class="table-wrap">
            <p class="card-text">
            check if there is an apple<br>
            climb branch to the left of 8<br>
            check if there is an apple<br>
            climb branch to the left of 3 <br>
            check if there is an apple<br>
            climb branch to the left of 7</p>
      </div>
      <div class="input-group mb-3" style="padding: 20px">
      <div class="input-group-prepend">
          <input type="text" name="inputanswer" id="inputanswer" autocomplete="off"  placeholder="Enter your decision!" onkeydown="redirect(this)">
      <script>
          function redirect(ele) {
              if(event.key === 'Enter') {
                  if(ele.value === 'check if there is an apple')
                       window.location.href = 'http://localhost:3000/difficult_levels8/1';
                  else
                      alert("Invalid");
              }
          }
      </script>
      </div>
  </div>
    <div style="padding: 10px" >
        <%= link_to 'Next', difficult_level8_path(node), class: "btn btn-success btn-lg" %>
    </div>
  </div>
</div>

